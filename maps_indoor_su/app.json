{
  "expo": {
    "name": "InGuide",
    "slug": "inguide",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "mapsindoorsu",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "InGuide needs access to your location to provide indoor navigation and positioning.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "InGuide needs access to your location to provide indoor navigation and positioning.",
        "NSCameraUsageDescription": "InGuide needs access to the camera for AR navigation features.",
        "NSMotionUsageDescription": "InGuide needs access to motion sensors for better indoor positioning."
      },
      "bundleIdentifier": "com.inguide.app"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "statusBar": {
        "translucent": true
      },
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "CAMERA",
        "ACCESS_BACKGROUND_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_BACKGROUND_LOCATION",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.FOREGROUND_SERVICE_LOCATION",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ],
      "package": "com.inguide.app",
      "config": {
        "googleMaps": {
          "apiKey": "YOUR_GOOGLE_MAPS_API_KEY_HERE"
        }
      }
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",

      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow InGuide to use your location for navigation and positioning.",
          "locationAlwaysPermission": "Allow InGuide to use your location for navigation and positioning.",
          "locationWhenInUsePermission": "Allow InGuide to use your location for navigation and positioning.",
          "isAndroidBackgroundLocationEnabled": true
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow InGuide to access the camera for AR navigation."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "6a989a32-aca7-4fc7-aeb5-22ac0eb403f6"
      }
    }
  }
}
